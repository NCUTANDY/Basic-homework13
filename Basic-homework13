#include<stdio.h>  
#include<iostream> 
int main()
{
    int gender,age; 

    printf("如果男性請輸入1,女性請輸入2。\n"); 

    printf("請輸入性別和年齡：");

 	scanf("%d %d",&gender,&age); 

    if( gender==1 && age>=18 )  

    {

    printf("你可以結婚\n");

    }

    if( gender==1 && age<18 )

    {

    printf("你不可以結婚\n");

    }

    if( gender==2 && age>=16 )

    {

    printf("妳可以結婚\n");

    }

    if( gender==2 && age<16 )

    {

    printf("妳不可以結婚\n");

    }

    return 0; 

}
